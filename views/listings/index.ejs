<% layout("./layouts/boilerplate.ejs") %>
<body>
  <h3>All Listing</h3>
 
  <div class=" card container-fluid my-4 px-5">
  <div class="row g-4 row-cols-1 row-cols-md-2 row-cols-lg-4">
    <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="col">
      <div class="card h-100">
        <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top" style="height: 20rem;" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            &#36;<%= listing.price != null ? listing.price.toLocaleString("en-PK") : "N/A" %>/night
          </p>
        </div>
      </div>
    </div>
  </a>
<% } %>

  </div>
</div>

</body>
