<% layout("./layouts/boilerplate.ejs") %>
<body>
  
  <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
    <div class="row">
      <div class="col-8 offset-2 mt-3">
        <h3>Edit your listing</h3>
        <div class="mb-3">
          <label for="title" class="form-label">Enter Title:</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Enter description:</label>
          <textarea name="listing[description]" class="form-control" id="">
<%= listing.description %></textarea
          >
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Enter URL/Link:</label>
         <input type="text" class="form-control" name="listing[image][url]" value="<%= listing && listing.image ? listing.image.url : '' %>" />

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Enter Price:</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
            />
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter Country:</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Enter Location:</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
          />
        </div>


        <button class="btn btn-dark btn-add mt-3">Edit List info</button>
      </div>
    </div>
  </form>
</body>
