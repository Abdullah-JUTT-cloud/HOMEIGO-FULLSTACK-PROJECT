<% layout("./layouts/boilerplate.ejs") %>
  <form action="/login" method="post" novalidate class="needs-validation">
    <div class="row mt-3">
      <div class="col-6 offset-3">
        <h2 class="offset-5 mb-2">Login</h2>
        <div class="mb-3">
          <label for="username" class="form-label">Enter username:</label>
          <input type="text" name="username" id="username" class="form-control" required />
          <div class="valid-feedback">username is Fine!</div>
          <div class="invalid-feedback">username is not valid!</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Enter password:</label>
          <input type="password" name="password" id="password" class="form-control" required />
          <div class="valid-feedback">password is Fine!</div>
          <div class="invalid-feedback">password is not valid!</div>
        </div>
        <button class="btn btn-outline-success">Login</button>
        <a href="/signup" class="btn btn-outline-primary">SignUp</a>

      </div>
    </div>
  </form>