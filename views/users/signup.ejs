<% layout("./layouts/boilerplate.ejs") %>
  <form action="/signup" method="post" novalidate class="needs-validation">
    <div class="row mt-3">
      <div class="col-6 offset-3">
        <h2 class="offset-5 mb-2">SignUp</h2>
        <div class="mb-3">
          <label for="username" class="form-label">Enter username:</label>
          <input type="text" name="username" id="username" class="form-control" required />
          <div class="valid-feedback">username is Fine!</div>
          <div class="invalid-feedback">username is not valid!</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Enter email:</label>
          <input type="email" name="email" id="email" class="form-control" required />
          <div class="valid-feedback">email is Fine!</div>
          <div class="invalid-feedback">email is not valid!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Enter password:</label>
          <input type="password" name="password" id="password" class="form-control" required />
          <div class="valid-feedback">password is Fine!</div>
          <div class="invalid-feedback">password is not valid!</div>
        </div>
        <button class="btn btn-outline-success">SignUp</button>
        <a href="/login" class="btn btn-outline-primary">Login</a>

      </div>
    </div>
  </form>